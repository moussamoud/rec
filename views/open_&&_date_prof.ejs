      </ul>
      <div class="social_media">
        <li><a id="Logout" href="/log"><i class="fas fa-sign-out-alt"></i>Logout</a></li>
      </div>

    </div>
    <div class="main_content">
      <div id="content-container">
        <% if(date=="open" ){%>
          <div id="countdowntimer">
            <span class="future_date"></span>
          </div>
